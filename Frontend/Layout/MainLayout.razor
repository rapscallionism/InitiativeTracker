@inherits LayoutComponentBase

@* Required *@
<MudThemeProvider  @rendermode="new InteractiveWebAssemblyRenderMode(true)"/>
<MudPopoverProvider  @rendermode="new InteractiveWebAssemblyRenderMode(true)" />

@* Needed for dialogs *@
<MudDialogProvider  @rendermode="new InteractiveWebAssemblyRenderMode(true)" />

@* Needed for snackbars *@
<MudSnackbarProvider  @rendermode="new InteractiveWebAssemblyRenderMode(true)" />

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <article class="content px-4">
            @Body
        </article>
    </main>
</div>
